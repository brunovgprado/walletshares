<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/background">

    <LinearLayout
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5">

        <android.support.v7.widget.CardView
            android:id="@+id/card_detalhes"
            android:foreground="?android:selectableItemBackground"
            android:clickable="true"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:focusable="true"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">
                <TextView
                    android:id="@+id/text_title_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textSize="@dimen/text_size_btn_pricipal"
                    android:paddingBottom="@dimen/textView_vertical_margin"
                    android:singleLine="true"
                    android:textAllCaps="true"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/text_details_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/text_title_details"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textSize="@dimen/text_size_btn_pricipal"
                    android:paddingBottom="@dimen/textView_vertical_margin"
                    android:singleLine="true"/>

                <TextView
                    android:id="@+id/text_details_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/text_details_2"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textSize="@dimen/text_size_btn_pricipal"
                    android:paddingBottom="@dimen/textView_vertical_margin"
                    android:singleLine="true"/>

                <TextView
                    android:id="@+id/text_details_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/text_details_3"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textSize="@dimen/text_size_btn_pricipal"
                    android:paddingBottom="@dimen/textView_vertical_margin"
                    android:singleLine="true"/>

                <TextView
                    android:id="@+id/text_details_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/text_details_4"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textSize="@dimen/text_size_btn_pricipal"
                    android:paddingBottom="@dimen/textView_vertical_margin"
                    android:singleLine="true"/>

                <TextView
                    android:id="@+id/text_details_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/text_details_5"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textSize="@dimen/text_size_btn_pricipal"
                    android:paddingBottom="@dimen/textView_vertical_margin"
                    android:singleLine="true"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5">

        <android.support.v7.widget.CardView
            android:id="@+id/mapa_detalhes"
            android:foreground="?android:selectableItemBackground"
            android:clickable="true"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:focusable="true"
            app:cardElevation="0dp">

        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>

